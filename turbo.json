{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "lint", "test", "check-types"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**", "build/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "outputs": [],
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.test.*", "test/**/*.ts"]
    }
  }
}
